<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
    <shape>

        <stroke
            android:width="1dp" android:color="@color/light_gray" />
    <corners android:radius="1999dp"/>

    <padding
        android:left="6dp"
        android:top="4dp"
        android:right="6dp"
        android:bottom="4dp"/>
    </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp" android:color="@color/light_gray" />
        <corners
            android:radius="1999dp" />

        <padding
            android:left="6dp"
            android:top="4dp"
            android:right="6dp"
            android:bottom="4dp"/>
        </shape>
    </item>
</selector>